{
  "version": "2.0.0",
  "tasks": [
    //#region vscode

    // dev
    {
      "type": "shell",
      "label": "vscode#dev",
      "dependsOn": ["vscode-extension#dev", "vscode-webview#dev"],
      "dependsOrder": "parallel",
      "command": "echo",
      "args": ["OK"],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },

    // build
    {
      "type": "shell",
      "label": "vscode#build",
      "dependsOn": ["vscode-extension#build", "vscode-webview#build"],
      "dependsOrder": "parallel",
      "command": "echo",
      "args": ["OK"],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },

    // build:watch
    {
      "type": "shell",
      "label": "vscode#build:watch",
      "dependsOn": ["vscode-extension#build", "vscode-webview#build"],
      "dependsOrder": "parallel",
      "command": "echo",
      "args": ["OK"],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },

    //#endregion

    //#region vscode-extension

    // dev
    {
      "type": "shell",
      "label": "vscode-extension#dev",
      "command": "pnpm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      }
    },

    // vscode-extension#build
    {
      "type": "shell",
      "group": "build",
      "label": "vscode-extension#build",
      "command": "pnpm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ]
      }
    },

    // vscode-extension#build:watch
    {
      "type": "shell",
      "label": "vscode-extension:build:watch",
      "command": "pnpm",
      "args": ["run", "build:watch"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      }
    },

    //#endregion

    //#region vscode-webview

    // vscode-webview#dev
    {
      "type": "shell",
      "label": "vscode-webview#dev",
      "command": "pnpm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": ".*ready in.*"
        }
      }
    },

    // vscode-webview#build
    {
      "type": "shell",
      "group": "build",
      "label": "vscode-webview#build",
      "command": "pnpm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ]
      }
    },

    // vscode-webview#build:watch
    {
      "type": "shell",
      "label": "vscode-webview#build:watch",
      "command": "pnpm",
      "args": ["run", "build:watch"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      }
    }

    //#endregion
  ]
}
