    //#endregion

    //#region vscode-extension

    // dev
    {
      "type": "shell",
      "label": "vscode-extension#dev",
      "command": "pnpm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/pkgs/vsc-extension"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      }
    },

    // vscode-extension#build
    {
      "type": "shell",
      "group": "build",
      "label": "vscode-extension#build",
