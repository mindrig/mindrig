{
  "version": "2.0.0",
  "tasks": [
    //#region Build

    // Extension
    {
      "type": "shell",
      "label": "build:extension",
      "dependsOn": ["build:webview"],
      "dependsOrder": "parallel",
      "command": "pnpm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ]
      }
    },

    // Webview
    {
      "type": "shell",
      "label": "build:webview",
      "command": "pnpm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ]
      }
    },

    //#endregion

    //#region Watch

    // Extension
    {
      "type": "shell",
      "label": "watch:extension",
      "dependsOn": ["watch:webview"],
      "dependsOrder": "parallel",
      "command": "pnpm",
      "args": ["run", "watch"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      },
      "group": "build"
    },

    // Webview
    {
      "type": "shell",
      "label": "watch:webview",
      "command": "pnpm",
      "args": ["run", "watch"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^vite.*building",
          "endsPattern": ".*built in.*ms\\."
        }
      },
      "group": "build"
    },

    //#endregion

    //#region Serve

    // Webview
    {
      "type": "shell",
      "label": "serve:webview",
      "command": "pnpm",
      "args": ["run", "serve"],
      "options": {
        "cwd": "${workspaceFolder}/vscode/webview"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "code": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": ".*ready in.*"
        }
      }
    }

    //#endregion
  ]
}
