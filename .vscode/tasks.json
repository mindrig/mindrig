{
  "version": "2.0.0",
  "tasks": [
    //#region vscode

    // dev
    {
      "type": "shell",
      "label": "vscode#dev",
      "dependsOn": [
        "vscode-extension#dev",
        "vscode-webview#dev",
        "gateway#dev"
      ],
      "dependsOrder": "parallel",
      "command": "echo",
      "args": ["OK"],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },

    // build
    {
      "type": "shell",
      "label": "vscode#build",
      "dependsOn": ["vscode-extension#build", "vscode-webview#build"],
      "dependsOrder": "parallel",
      "command": "echo",
      "args": ["OK"],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },

    // preview
