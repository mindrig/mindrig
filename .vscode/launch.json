{
  "version": "0.2.0",
  "configurations": [
    //#region vscode

    // vscode#dev
    {
      "name": "vscode#dev",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "vscode#dev",
      "env": {
        "VSCODE_DEV_SERVER": "true"
      }
    },

    // vscode#build
    {
      "name": "vscode#build",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "vscode#build"
    },

    // vscode#build:watch
    {
      "name": "vscode#build:watch",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "vscode#build:watch"
    }

    //#endregion
  ]
}
