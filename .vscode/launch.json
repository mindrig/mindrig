{
  "version": "0.2.0",
  "configurations": [
    //#region vscode

    // vscode#dev
    {
      "name": "vscode#dev",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vscode#dev",
      "env": {
        "VSCODE_DEV_SERVER": "true"
      }
    },

    // vscode#build
    {
      "name": "vscode#build",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vscode#build"
    },

    // vscode#preview
    {
      "name": "vscode#preview",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vscode#preview"
    },

    // vscode#preview:watch
    {
      "name": "vscode#preview:watch",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vscode#preview:watch"
    },

    //#endregion

    //#region storybook

    // storybook#dev
    {
      "name": "storybook#dev",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3190",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "storybook#dev"
    },

    //#endregion

    //#region test

    {
      "name": "vitest#debug",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }

    //#endregion
  ]
}
