{
  "version": "0.2.0",
  "configurations": [
    //#region vsc

    // vsc#dev
    {
      "name": "vsc#dev",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#dev",
      "env": {
        "MINDRIG_DEV_VSC_WEBVIEW_SERVER": "true"
      }
    },

    // vsc#dev:offline
    {
      "name": "vsc#dev:offline",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#dev:offline",
      "env": {
        "MINDRIG_DEV_VSC_WEBVIEW_SERVER": "true",
        "MINDRIG_DEV_OFFLINE": "true"
      }
    },

    // vsc#dev:record
    {
      "name": "vsc#dev:record",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#dev:record",
      "env": {
        "MINDRIG_DEV_VSC_WEBVIEW_SERVER": "true",
        "MINDRIG_DEV_RECORD": "true"
      }
    },

    // vsc#build
    {
      "name": "vsc#build",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#build"
    },

    // vsc#preview
    {
      "name": "vsc#preview",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#preview"
    },

    // vsc#preview:watch
    {
      "name": "vsc#preview:watch",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--profile=mindrig-dev",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/pkgs/vsc-extension",
        "${workspaceFolder}/pkgs/vsc-extension/tests/workspace"
      ],
      "outFiles": ["${workspaceFolder}/pkgs/vsc-extension/dist/**/*.js"],
      "preLaunchTask": "vsc#preview:watch"
    },

    //#endregion

    //#region home

    // home#dev
    {
      "name": "home#dev",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3111",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "home#dev"
    },

    //#endregion

    //#region storybook

    // storybook#dev
    {
      "name": "storybook#dev",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3190",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "storybook#dev"
    },

    //#endregion

    //#region test

    {
      "name": "test#debug",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }

    //#endregion
  ]
}
