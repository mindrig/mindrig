{
  "version": "0.2.0",
  "configurations": [
    //#region Extension

    // Watch
    {
      "name": "Extension Watch",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/demo"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "watch:extension"
    },

    // Run
    {
      "name": "Extension Run",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/demo"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "build:extension"
    },

    // Serve
    {
      "name": "Extension Serve",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode/extension",
        "${workspaceFolder}/vscode/extension/demo"
      ],
      "outFiles": ["${workspaceFolder}/vscode/extension/dist/**/*.js"],
      "preLaunchTask": "serve:extension",
      "env": {
        "VSCODE_DEV_SERVER": "true"
      }
    }

    //#endregion
  ]
}
