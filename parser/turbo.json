{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "./Cargo.toml",
        "./scripts/build.sh",
        "./src/**/*.rs"
      ],
      "outputs": ["./pkg/**"]
    },

    "test": {
      "inputs": ["$TURBO_DEFAULT$", "./Cargo.toml", "./src/**/*.rs"]
    },

    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "./Cargo.toml", "./src/**/*.rs"]
    },

    "format": {
      "inputs": ["$TURBO_DEFAULT$", "./Cargo.toml", "./src/**/*.rs"],
      "outputs": ["./src/**/*.rs"]
    },

    "fix": {
      "inputs": ["$TURBO_DEFAULT$", "./Cargo.toml", "./src/**/*.rs"]
    }
  },
  "extends": ["//"]
}
