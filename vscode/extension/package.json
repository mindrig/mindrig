{
  "name": "vscode",
  "publisher": "mindcontrol",
  "displayName": "Mind Control Code",
  "description": "Mind Control Code extension for VS Code",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindcontrol/code.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindcontrol.showWorkbench",
        "title": "Show Workbench"
      },
      {
        "command": "mindcontrol.addItWorks",
        "title": "Add 'It works!' comment"
      }
    ],
    "configuration": {
      "title": "Mind Control Code",
      "properties": {
        "mindcontrol.exampleSetting": {
          "type": "string",
          "default": "default value",
          "description": "An example setting for demonstration"
        },
        "mindcontrol.enableFileTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable tracking of active files"
        },
        "mindcontrol.showFileContent": {
          "type": "boolean",
          "default": true,
          "description": "Show file content in the webview"
        },
        "mindcontrol.autoSaveIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show auto-save indicator in the webview"
        }
      }
    },
    "views": {
      "mindcontrol-workbench": [
        {
          "id": "mindcontrol.workbench",
          "name": "Mind Control Code",
          "when": "true",
          "type": "webview",
          "icon": "$(extensions)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mindcontrol-workbench",
          "title": "Mind Control Code",
          "icon": "$(extensions)"
        }
      ]
    }
  },
  "scripts": {
    "dev": "pnpm run build:watch",
    "pack": "vsce pack --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "pnpm -F @mindcontrol/vscode-webview run package && pnpm run package",
    "package": "vite build --mode production",
    "build": "vite build",
    "build:watch": "VSCODE_DEV_SERVER=true vite build --watch --mode development",
    "test": "test -z $TURBO_HASH && turbo run test || echo OK",
    "test/unit": "vitest run",
    "test/unit:watch": "vitest",
    "test/unit:coverage": "vitest run --coverage",
    "test/e2e": "./tests/e2e/run.sh",
    "test/e2e/build": "rm -rf ./out && tsc -p ./tsconfig.e2e.json ",
    "test/e2e/build:watch": "rm -rf ./out && tsc -p ./tsconfig.e2e.json --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write .",
    "gen/webview/html": "tsx ./scripts/gen/webviewHtml.ts"
  },
  "dependencies": {
    "@mindcontrol/code-parser": "0.1.0"
  },
  "devDependencies": {
    "@mindcontrol/code-types": "0.1.0",
    "@mindcontrol/vscode-types": "0.1.0",
    "@playwright/test": "^1.55.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "oxlint": "^1.13.0",
    "playwright-core": "^1.55.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
