{
  "name": "vscode",
  "publisher": "mindcontrol",
  "displayName": "Mind Control Code",
  "description": "Mind Control Code extension for VS Code",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindcontrol/code.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindcontrol.showWorkbench",
        "title": "Show Workbench"
      },
      {
        "command": "mindcontrol.addItWorks",
        "title": "Add 'It works!' comment"
      }
    ],
    "configuration": {
      "title": "Mind Control Code",
      "properties": {
        "mindcontrol.exampleSetting": {
          "type": "string",
          "default": "default value",
          "description": "An example setting for demonstration"
        },
        "mindcontrol.enableFileTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable tracking of active files"
        },
        "mindcontrol.showFileContent": {
          "type": "boolean",
          "default": true,
          "description": "Show file content in the webview"
        },
        "mindcontrol.autoSaveIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show auto-save indicator in the webview"
        }
      }
    },
    "views": {
      "mindcontrol-workbench": [
        {
          "id": "mindcontrol.workbench",
          "name": "Mind Control Code",
          "when": "true",
          "type": "webview",
          "icon": "$(extensions)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mindcontrol-workbench",
          "title": "Mind Control Code",
          "icon": "$(extensions)"
        }
      ]
    }
  },
  "scripts": {
    "pack": "vsce pack --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "pnpm -F @mindcontrol/vscode-webview run package && pnpm run package",
    "package": "vite build --mode production",
    "build": "vite build",
    "watch": "vite build --watch --mode development",
    "build:tests": "tsc -p ./tsconfig.tests.json ",
    "watch:tests": "tsc -p ./tsconfig.tests.json --watch",
    "pretest": "pnpm run build:tests",
    "test": "./test/run.sh",
    "lint": "eslint src",
    "generate:webview:html": "tsx ./scripts/generateWebviewHtml.ts"
  },
  "dependencies": {
    "@mindcontrol/code-parser": "0.1.0"
  },
  "devDependencies": {
    "@mindcontrol/code-types": "0.1.0",
    "@mindcontrol/vscode-types": "0.1.0",
    "@playwright/test": "^1.55.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "playwright-core": "^1.55.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.3"
  }
}
