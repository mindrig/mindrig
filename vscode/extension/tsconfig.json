{
  "include": ["./src/**/*.ts", "./tests/**/*.ts", "./scripts/**/*.ts"],
  "compilerOptions": {
    // Resolve
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // We need it as VS Code extension can't resolve pnpm paths, so we lock
      // `@mindcontrol/code-parser-wasm` to a specific version and override
      // it to `workspace:*` in `pnpm-workspace.yaml`. So we need to tell
      // TypeScript where to find the local package as well.
      "@mindcontrol/code-parser-wasm": ["../../parser/pkg"]
    },
    // Output
    "noEmit": true,
    "target": "esnext",
    // Modules
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Env
    "lib": ["ES2022"],
    "types": ["node", "vscode", "mocha"],
    // Checks
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
