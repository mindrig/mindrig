{
  "name": "@wrkspc/storybook",
  "private": true,
  "version": "0.0.0",
  "description": "Workspace Storybook host aggregating UI stories",
  "type": "module",
  "scripts": {
    "dev": "storybook dev --config-dir ./src/ --port 3190",
    "build": "storybook build --config-dir ./src/ --output-dir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "$(pnpm root -w)/../scripts/pkg-types.sh || tsc",
    "types:watch": "$(pnpm root -w)/../scripts/pkg-types.sh watch || tsc --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.1.16",
    "react": "^19.1.1",
    "storybook": "^9.1.7",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@wrkspc/ts": "workspace:*",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
