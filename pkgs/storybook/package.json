{
  "name": "@wrkspc/storybook",
  "private": true,
  "version": "0.0.0",
  "license": "FSL-1.1-ALv2",
  "description": "Workspace Storybook host aggregating UI stories",
  "type": "module",
  "scripts": {
    "dev": "storybook dev --config-dir ./src/ --port 3190",
    "build": "storybook build --config-dir ./src/ --output-dir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\"; else tsc --build; fi",
    "types:watch": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\" watch; else tsc --build --watch; fi",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.2.2",
    "react": "^19.2.0",
    "storybook": "^9.1.7",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@wrkspc/ts": "workspace:*",
    "oxlint": "^1.31.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
