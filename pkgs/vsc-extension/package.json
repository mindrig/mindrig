{
  "name": "vscode",
  "publisher": "mindrig",
  "displayName": "Mind Rig",
  "description": "Mind Rig extension for VS Code",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindrig/mindrig.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "icon": "./assets/logo-256.png",
  "categories": [
    "AI"
  ],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "icons": {
      "mindrig-toolbar-icon": {
        "description": "Mind Rig toolbar icon",
        "default": {
          "fontPath": "./assets/icons.woff2",
          "fontCharacter": "\\E000"
        }
      }
    },
    "commands": [
      {
        "command": "mindrig.showPlayground",
        "title": "Mind Rig: Show Playground"
      },
      {
        "command": "mindrig.runPrompt",
        "title": "Mind Rig: Run Prompt"
      },
      {
        "command": "mindrig.logIn",
        "title": "Log In",
        "icon": "$(unlock)"
      },
      {
        "command": "mindrig.logOut",
        "title": "Log Out",
        "icon": "$(lock)"
      },
      {
        "command": "mindrig.showProfile",
        "title": "Show Profile",
        "icon": "$(account)"
      },
      {
        "command": "mindrig.dev.clearState",
        "title": "Mind Rig Dev: Clear All State"
      },
      {
        "command": "mindrig.dev.enableAutoReload",
        "title": "Mind Rig Dev: Enable Auto Reload"
      },
      {
        "command": "mindrig.dev.disableAutoReload",
        "title": "Mind Rig Dev: Disable Auto Reload"
      }
    ],
    "configuration": {
      "title": "Mind Rig",
      "properties": {
        "mindrig.playground.showSource": {
          "type": "boolean",
          "default": false,
          "description": "Show prompt source code in the playground"
        },
        "mindrig.playground.parallelRequests": {
          "type": "integer",
          "default": 4,
          "minimum": 1,
          "description": "Maximum number of AI requests to run in parallel"
        },
        "mindrig.dev.logsVerbosity": {
          "type": "string",
          "default": "warn",
          "enum": [
            "debug",
            "info",
            "warn",
            "error",
            "silent"
          ],
          "description": "Logging verbosity level"
        }
      }
    },
    "views": {
      "mindrig-playground": [
        {
          "id": "mindrig.playground",
          "name": "Playground",
          "when": "true",
          "type": "webview",
          "icon": "$(mindrig-toolbar-icon)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mindrig-playground",
          "title": "Mind Rig",
          "icon": "$(mindrig-toolbar-icon)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mindrig.logIn",
          "when": "view == mindrig.playground && !mindrig.auth.loggedIn",
          "group": "navigation"
        },
        {
          "command": "mindrig.showProfile",
          "when": "view == mindrig.playground && mindrig.auth.loggedIn",
          "group": "navigation"
        },
        {
          "command": "mindrig.logOut",
          "when": "view == mindrig.playground && mindrig.auth.loggedIn"
        }
      ],
      "view/item/context": [
        {
          "command": "mindrig.showProfile",
          "when": "view == mindrig.playground",
          "group": "inline"
        },
        {
          "command": "mindrig.showProfile",
          "when": "view == mindrig.playground"
        }
      ]
    }
  },
  "scripts": {
    "dev": "env MINDRIG_DEV_AUTO_RELOAD=true vite build --mode development --watch",
    "preview": "vite build --mode development",
    "preview:watch": "env MINDRIG_DEV_AUTO_RELOAD=true vite build --mode development --watch",
    "pack": "vsce pack --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "pnpm -F @wrkspc/vsc-webview run package && pnpm run package",
    "package": "vite build --mode production",
    "build": "vite build --mode production",
    "test": "test -z $TURBO_HASH && turbo run test || echo OK",
    "test/unit": "vitest run",
    "test/unit:watch": "vitest",
    "test/unit:coverage": "vitest run --coverage",
    "test/unit/snap/update": "vitest run --update",
    "test/unit/snap/update:watch": "vitest --update",
    "test/e2e": "./tests/e2e/run.sh",
    "test/e2e/build": "rm -rf ./out && tsc -p ./tsconfig.e2e.json ",
    "test/e2e/build:watch": "rm -rf ./out && tsc -p ./tsconfig.e2e.json --watch",
    "types": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\"; else tsc --build; fi",
    "types:watch": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\" watch; else tsc --build --watch; fi",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write .",
    "gen/icons": "node --disable-warning=MODULE_TYPELESS_PACKAGE_JSON ./scripts/gen/iconsFont.ts && fantasticon",
    "gen/webview/html": "tsx ./scripts/gen/webviewHtml.ts"
  },
  "dependencies": {
    "@ai-sdk/gateway": "^2.0.9",
    "@mindrig/parser-wasm": "0.1.0",
    "ai": "^5.0.93",
    "alwaysly": "^0.4.0",
    "fastest-levenshtein": "^1.0.16",
    "mime": "^4.1.0",
    "nanoid": "^5.0.7",
    "p-queue": "^8.0.1",
    "smolcsv": "^0.1.0",
    "smollog": "^0.2.0",
    "yjs": "^13.6.27",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@mindrig/types": "0.1.0",
    "@playwright/test": "^1.55.0",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.99.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "@wrkspc/core": "0.1.0",
    "@wrkspc/theme": "workspace:*",
    "@wrkspc/ts": "workspace:*",
    "fantasticon": "^3.0.0",
    "oxlint": "^1.31.0",
    "playwright-core": "^1.55.0",
    "prettier": "^3.6.2",
    "smolcanon": "^0.2.0",
    "smolxxh": "^0.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.0",
    "vitest": "^4.0.15"
  },
  "private": false
}
