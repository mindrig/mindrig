{
  "extends": "@wrkspc/ts/base",
  "compilerOptions": {
    // Resolve
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // We need it as VS Code extension can't resolve pnpm paths, so we lock
      // `@mindrig/parser-wasm` to a specific version and override
      // it to `workspace:*` in `pnpm-workspace.yaml`. So we need to tell
      // TypeScript where to find the local package as well.
      "@mindrig/parser-wasm": ["../parser/pkg"]
    },
    // Modules
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Env
    "lib": ["ES2022"],
    "types": ["./env.d.ts", "vscode", "mocha"]
  },
  "references": [
    { "path": "../core/" },
    // TODO: Add tsconfig.json to parser's pkg
    // { "path": "../parser/pkg/" },
    // TODO: Generate tsconfigs.json in Genotype projects
    // { "path": "../types/pkgs/ts/" },
    { "path": "../../subs/ds/pkgs/theme/" }
  ]
}
