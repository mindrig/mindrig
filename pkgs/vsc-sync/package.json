{
  "name": "@wrkspc/vsc-sync",
  "private": true,
  "version": "0.1.0",
  "description": "Workspace sync helpers for VS Code",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "$(pnpm root -w)/../scripts/pkg-types.sh || tsc",
    "types:watch": "$(pnpm root -w)/../scripts/pkg-types.sh watch || tsc --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "oxlint": "^1.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "yjs": "^13.6.27",
    "@wrkspc/lang": "workspace:*",
    "@wrkspc/vsc-types": "workspace:*"
  }
}
