{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react"],
  "categories": {
    "correctness": "off"
  },
  "env": {
    "builtin": true,
    "es2022": true
  },
  "rules": {
    "curly": ["warn", "multi", "consistent"],
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "react/react-in-jsx-scope": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
