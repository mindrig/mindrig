{
  "name": "@wrkspc/vsc-webview",
  "private": true,
  "version": "0.1.0",
  "description": "Mind Rig webview React application",
  "type": "module",
  "scripts": {
    "package": "vite build --mode production",
    "dev": "vite",
    "preview": "vite build --mode development",
    "preview:watch": "vite build --watch --mode development",
    "build": "vite build --mode production",
    "test": "test -z $TURBO_HASH && turbo test || true",
    "test/unit": "vitest run",
    "test/unit:watch": "vitest",
    "test/unit:coverage": "vitest run --coverage",
    "types": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\"; else tsc --build; fi",
    "types:watch": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\" watch; else tsc --build --watch; fi",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@mindrig/types": "workspace:*",
    "@uiw/react-json-view": "2.0.0-alpha.37",
    "@wrkspc/core": "workspace:*",
    "@wrkspc/ds": "workspace:*",
    "@wrkspc/icons": "workspace:*",
    "@wrkspc/logo": "workspace:*",
    "@wrkspc/ui": "workspace:*",
    "alwaysly": "^0.4.0",
    "cnss": "^0.1.0",
    "enso": "^2.6.0",
    "leven": "^4.1.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-aria-components": "^1.13.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "react-upgrade": "^0.1.0",
    "smollog": "^0.2.0",
    "streamdown": "^1.3.0",
    "superstate": "1.0.0-beta.7",
    "tinyfloat": "^1.0.2",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@storybook/react": "^9.1.7",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@wrkspc/ts": "workspace:*",
    "autoprefixer": "^10.4.20",
    "happy-dom": "^18.0.1",
    "oxlint": "^1.23.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.6.2",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.15",
    "tailwindcss-react-aria-components": "^2.0.1",
    "tdollar": "^0.6.0",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.6"
  }
}
