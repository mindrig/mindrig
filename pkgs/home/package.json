{
  "name": "@wrkspc/home",
  "version": "0.1.0",
  "license": "FSL-1.1-ALv2",
  "type": "module",
  "scripts": {
    "dev": "astro dev --host 127.0.0.1 --port 3110",
    "build": "astro check && astro build",
    "deploy": "astro build && wrangler deploy --minify",
    "cf-typegen": "wrangler types",
    "test": "test -z $TURBO_HASH && turbo test || true",
    "test/unit": "vitest run",
    "test/unit:watch": "vitest",
    "test/unit:coverage": "vitest run --coverage",
    "types": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\"; else tsc --build; fi",
    "types:watch": "script_path=\"$(pnpm root -w)/../scripts/pkg-types.sh\"; if [ -f \"$script_path\" ]; then \"$script_path\" watch; else tsc --build --watch; fi",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions"
  },
  "dependencies": {
    "@wrkspc/icons": "workspace:*",
    "@wrkspc/logo": "workspace:*",
    "@wrkspc/theme": "workspace:*",
    "@wrkspc/ui": "workspace:*",
    "astro": "^5.13.5",
    "cnss": "^0.1.0",
    "marked": "^14.1.1",
    "react": "19.2.0",
    "react-aria-components": "^1.12.1",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.7",
    "@astrojs/react": "^4.3.0",
    "@cloudflare/workers-types": "^4.20250610.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@wrkspc/ts": "workspace:*",
    "oxlint": "^1.31.0",
    "prettier": "^3.6.2",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.12",
    "tailwindcss-capsize": "^4.0.1",
    "tailwindcss-react-aria-components": "^2.0.1",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.0",
    "vitest": "^4.0.15",
    "wrangler": "^4.28.0"
  }
}
