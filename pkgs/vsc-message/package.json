{
  "name": "@wrkspc/vsc-message",
  "private": true,
  "version": "0.1.0",
  "description": "Typed message contracts for the Mindrig VS Code extension and webview.",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "$(pnpm root -w)/../scripts/pkg-types.sh || tsc",
    "types:watch": "$(pnpm root -w)/../scripts/pkg-types.sh watch || tsc --watch",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix --fix-suggestions",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@mindrig/types": "workspace:*",
    "@wrkspc/auth": "workspace:*",
    "@wrkspc/model": "workspace:*",
    "@wrkspc/vsc-sync": "workspace:*",
    "@wrkspc/vsc-state": "workspace:*",
    "@wrkspc/vsc-types": "workspace:*"
  },
  "devDependencies": {
    "oxlint": "^1.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
