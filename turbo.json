{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "//#install/npm": {
      "dependsOn": []
    },

    "//#setup/codex": {
      "dependsOn": [],
      "inputs": [".codex/**"]
    },

    "//#setup/vsc": {
      "dependsOn": [],
      "inputs": [".vscode/settings.json"],
      "outputs": ["mindrig.code-workspace"]
    },

    "setup": {
      "dependsOn": ["//#setup/codex", "//#setup/vsc"]
    },

    "all": {
      "dependsOn": ["build", "types", "test", "lint"]
    },

    "build": {},

    "test": {},

    "test/rs": {},

    "test/rs:watch": {},

    "test/rs:review": {},

    "types": {},

    "types:watch": {},

    "//#root/types": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/pkgs/*/tsconfig.json",
        "**/pkgs/*/src/**/*.ts",
        "**/pkgs/*/src/**/*.tsx"
      ],
      "outputs": ["**/pkgs/*/.ts/**/*"],
      "dependsOn": []
    },

    "//#root/types:watch": {},

    "lint": {},

    "lint:fix": {},

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
