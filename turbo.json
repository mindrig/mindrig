{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "//#install/npm": {
      "dependsOn": []
    },

    "setup": {},

    "all": {
      "dependsOn": ["build", "types", "test", "lint"]
    },

    "build": {},

    "test": {},

    "test/rs": {},

    "test/rs:watch": {},

    "test/rs:review": {},

    "types": {},

    "types:watch": {},

    "lint": {},

    "lint:fix": {},

    "storybook:dev": {
      "cache": false,
      "persistent": true
    },

    "storybook:build": {
      "outputs": ["pkgs/storybook/dist/**"],
      "dependsOn": ["^build"]
    }
  }
}
